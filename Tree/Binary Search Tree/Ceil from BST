int findCeil(BinaryTreeNode<int> *root, int x){
   int ceil=-1;
    while(root){
        if(root->data==x){
            ceil=x;
            return ceil;
        }
        if(x>root->data){
            root=root->right;
        }else{
            ceil=root->data;
            root=root->left;
        }
    }
    return ceil;
}

