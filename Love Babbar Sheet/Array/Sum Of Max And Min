#include<bits/stdc++.h>
int sumOfMaxMin(int arr[], int n){
	int mx=INT_MIN,mi=INT_MAX;
    for(int i=0;i<n;i++){
        mx=max(mx,arr[i]);
        mi=min(mi,arr[i]);
    }
    return mx+mi;
}

