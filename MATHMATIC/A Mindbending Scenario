#include<bits/stdc++.h>
using namespace std;
int main() {
   long long int x1,y1,x2,y2,x3,y3,x4,y4;
   cin>>x1>>y1>>x2>>y2>>x3>>y3>>x4>>y4;
   long long int a1=(x2-x1)*(y2-y1);
   long long int a2=(x4-x3)*(y4-y3);
   int inter=0;
   int left=max(x1,x3);
   int right=min(x2,x4);
   int top=min(y2,y4);
   int bottom=max(y1,y3);
   if(left<right&&bottom<top){
       inter=(right-left)*(top-bottom);
   }
   cout<<a1+a2-inter;
    return 0;
}
