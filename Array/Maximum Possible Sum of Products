long long MaxSum(long long int A[], long long int B[], long long int N){
    long long ans=0;
    sort(A,A+N);
    sort(B,B+N);
    for(int i=0;i<N;i++){
        ans+=(A[i]*B[i]);
    }
    return ans;
}

