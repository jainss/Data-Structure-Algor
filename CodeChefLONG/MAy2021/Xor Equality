#include <bits/stdc++.h> 
#define mod 1000000007
using namespace std;

int power(long long x, unsigned int y, int p){
    int res = 1;  
    while (y > 0){
        if (y & 1){
            res = (res*x) % p;
        }
        y = y>>1;
        x = (x*x) % p;
    }
    return res;
}
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int ans=power(2,n-1,mod);
        cout<<ans<<endl;
    }
    return 0;
}
