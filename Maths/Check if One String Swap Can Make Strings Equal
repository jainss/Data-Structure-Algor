class Solution {
public:
    bool areAlmostEqual(string s1, string s2) {
        int n=size(s1),cnt=0;
        vector<int> v1(26,0),v2(26,0);
        for(int i=0;i<n;i++){
            v1[s1[i]-'a']++;
            v2[s2[i]-'a']++;
            if(s1[i]!=s2[i]) cnt++;
            if(cnt>2) return 0;
        }
        return 1 and v1==v2;
    }
};

https://leetcode.com/problems/check-if-one-string-swap-can-make-strings-equal/
